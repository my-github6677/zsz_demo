@model House.DTO.RoleDTO[]
@{
    ViewBag.Title = "角色管理";
}

<nav class="breadcrumb"><i class="Hui-iconfont">&#xe67f;</i> 首页 <span class="c-gray en">&gt;</span> 管理员管理 <span class="c-gray en">&gt;</span> 角色管理 <a class="btn btn-success radius r mr-20" style="line-height:1.6em;margin-top:3px" href="javascript:location.replace(location.href);" title="刷新"><i class="Hui-iconfont">&#xe68f;</i></a></nav>
<div class="pd-20">
    <div class="text-c">
        @using (Html.BeginForm("Index", "Role", FormMethod.Post, new { @class = "Huiform" }))  //传统post提交
        {
            <input type="text" class="input-text" style="width:250px" placeholder="角色名称" id="btnStr" name="js">
            <button type="submit" class="btn btn-success"><i class="Hui-iconfont">&#xe665;</i> 搜权角色列表</button>
        }

    </div>
    <form id="iform" class="Huiform" target="_self">
        <div class="cl pd-5 bg-1 bk-gray mt-20"> <span class="l"><a href="javascript:;" onclick="datadel()" class="btn btn-danger radius"><i class="Hui-iconfont">&#xe6e2;</i> 批量删除</a> <a href="javascript:;" onclick="admin_role_add('添加角色','Add','','310')" class="btn btn-primary radius"><i class="Hui-iconfont">&#xe600;</i> 添加角色</a></span> <span class="r">共有数据：<strong>@Model.Length</strong> 条</span> </div>
        <table class="table table-border table-bordered table-bg">
            <thead>
                <tr>
                    <th scope="col" colspan="7">角色列表</th>
                </tr>
                <tr class="text-c">
                    <th width="25"><input type="checkbox" name="" value=""></th>
                    <th width="200">角色名称</th>
                    <th width="100">操作</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Length; i++)
                {
                    <tr class="text-c">
                        <td><input type="checkbox" value="@Model[i].Id" name="SelChecks"></td>
                        <td>@Model[i].Name</td>
                        <td><a title="编辑" href="javascript:;" onclick="admin_permission_edit('角色编辑', 'Edit/@Model[i].Id', '1', '', '310')" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6df;</i></a> <a title="删除" href="javascript:;" onclick="admin_permission_del(this,@Model[i].Id)" class="ml-5" style="text-decoration:none"><i class="Hui-iconfont">&#xe6e2;</i></a></td>
                    </tr>
                }

            </tbody>
        </table>
    </form>
</div>
@section foot
{
    <script type="text/javascript">

        function admin_role_add(title, url, w, h) {
            layer_show(title, url, w, h);
        }
        function admin_permission_edit(title, url, id, w, h) {
            layer_show(title, url, w, h);
        }
    </script>
}

